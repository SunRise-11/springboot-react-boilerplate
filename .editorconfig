# http://editorconfig.org
root = true

[*]
indent_style = tab
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.yml]
indent_style = space
indent_size = 4

[*.{js,ejs,jsx,html,xhtml}]
indent_style = space
indent_size = 2

[*.java]
indent_style = tab
indent_size = 4
